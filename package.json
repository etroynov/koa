{
  "name": "koa",
  "version": "3.0.0-alpha.1",
  "publishConfig": {
    "tag": "experimental"
  },
  "description": "Koa web app framework",
  "main": "dist/application.mjs",
  "exports": {
    ".": {
      "require": "./dist/application.js",
      "import": "./dist/application.mjs"
    },
    "./package": "./package.json",
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "jest --forceExit",
    "lint": "ts-standard",
    "lint:pretty": "ts-standard | snazzy",
    "authors": "git log --format='%aN <%aE>' | sort -u > AUTHORS",
    "build": "tsup",
    "prepare": "npm run build"
  },
  "repository": "koajs/koa",
  "keywords": [
    "web",
    "app",
    "http",
    "application",
    "framework",
    "middleware",
    "rack"
  ],
  "license": "MIT",
  "dependencies": {
    "accepts": "^1.3.8",
    "cache-content-type": "^1.0.1",
    "content-disposition": "~0.5.4",
    "content-type": "^1.0.5",
    "cookies": "~0.9.1",
    "debug": "^4.3.5",
    "delegates": "^1.0.0",
    "destroy": "^1.2.0",
    "encodeurl": "^2.0.0",
    "escape-html": "^1.0.3",
    "fresh": "~0.5.2",
    "http-assert": "^1.5.0",
    "http-errors": "^1.8.1",
    "koa-compose": "^4.1.0",
    "on-finished": "^2.4.1",
    "only": "~0.0.2",
    "parseurl": "^1.3.3",
    "statuses": "^1.5.0",
    "type-is": "^1.6.18",
    "vary": "^1.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/supertest": "^6.0.2",
    "@types/accepts": "^1.3.7",
    "@types/parseurl": "^1.3.3",
    "@types/statuses": "2.0.5",
    "@types/http-errors": "^2.0.4",
    "@types/on-finished": "^2.3.4",
    "@types/koa-compose": "3.2.8",
    "esbuild": "^0.21.5",
    "esbuild-jest2": "^0.6.7",
    "@jest/globals": "29.7.0",
    "jest": "^29.7.0",
    "snazzy": "^9.0.0",
    "ts-standard": "^12.0.2",
    "supertest": "^6.3.4",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">= 18"
  },
  "files": [
    "dist",
    "lib"
  ],
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "esbuild-jest2"
    }
  }
}
